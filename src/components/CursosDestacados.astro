---

import React from 'react';
import type { Curso, Cursos } from '../utils/CursoType';
import Card from './Card.astro';
import { dataCursos } from "../data/courses.ts";


// Definición de la interfaz 'Curso' con los nuevos campos requeridos

// Datos de los cursos recomendados
const recommendedCursos: Cursos = dataCursos
---

<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">

    {/* Título de la seccion*/}
    <h2 class="text-2xl font-bold tracking-tight text-gray-900">Cursos Recomendados</h2>

    {/* Cuadrícula para mostrar los cursos, adaptándose a diferentes tamaños de pantalla */}
    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">

    {/* Mapeo de recommendedCursos para renderizar una tarjeta por cada curso */}

    {
    recommendedCursos.map(({id, title, imagenURL, descripcionCorta} )=> {
                        return  (
                            <Card
                                    id={id}
                                    title={title}
                                    imagenURL={imagenURL}
                                    descripcionCorta={descripcionCorta}

                                     />)
                                }


                        )
    }

    </div>
  </div>
</div>