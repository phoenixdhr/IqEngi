---

export interface Props {
  id: number
  titulo: string
  imagenURL: string
  descripcionCorta: string
}

const {id, titulo, imagenURL, descripcionCorta} = Astro.props

---


<a href={`./cursos/${id}`} class="text-current no-underline">
  <div class="card bg-base-100 shadow-xl w-full hover:scale-105 transition-transform hover:shadow-2xl hover:contrast-125">
      {/* Imagen de la tarjeta */}
      <figure>
        <img src={imagenURL} alt={titulo} />
      </figure>

      <div class="card-body">
        {/* Titulo y descripcion de la tarjeta */}
        <h2 class="card-title">{titulo}</h2>
        <p>{descripcionCorta}</p>

        {/* Acciones de la tarjeta, en este caso, un bot√≥n para comprar el curso */}
        <div class="card-actions justify-end">
          <button class="btn btn-primary">Buy Now</button>
        </div>
      </div>
  </div>
</a>
