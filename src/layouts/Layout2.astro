---
interface Props {
    title: string;
}

const {title} = Astro.props
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <div>
            <slot name="navbar" />

            <section>
                <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
                    <slot/>
                </div>
            </section>

             <slot name="footer" />


        </div>
    </body>
</html>
